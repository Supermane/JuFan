<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_8">

        <ImageView
            android:id="@+id/hot_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_350"
            />

        <com.zhibo.jufan.view.Touxiang
            android:id="@+id/hot_small_touxiang"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/hot_small_touxiang"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toEndOf="@+id/hot_small_touxiang"
            android:orientation="vertical">

            <TextView
                android:id="@+id/hot_zhubo_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="一只小肉丸"
                android:textSize="12sp"
                android:layout_marginLeft="@dimen/dp_8"
                android:textColor="@color/white"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:src="@drawable/li_icon_home_location"/>

                <TextView
                    android:id="@+id/hot_zhubo_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="北京"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:layout_marginLeft="@dimen/dp_8"
                    />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
