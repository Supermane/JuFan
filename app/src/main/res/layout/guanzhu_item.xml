<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_5">

        <ImageView
            android:id="@+id/guanzhu_image"
            android:layout_width="@dimen/dp_95"
            android:layout_height="@dimen/dp_95"
            />

        <TextView
            android:id="@+id/guanzhu_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:textColor="#fff"
            android:text="12312312"
            android:textSize="12sp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="13dp"
            android:layout_alignBottom="@+id/guanzhu_image"
            android:layout_alignParentStart="true"/>

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true">

        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_8"
            android:src="@drawable/li_icon_home_location_red"
            android:id="@+id/imageView2"
            android:layout_alignBottom="@+id/guanzhu_image"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/guanzhu_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp_5"
            android:text="wqeqweqw"
            android:textColor="#B94754"
            android:textSize="8sp"
            android:layout_alignBottom="@+id/guanzhu_image"
            android:layout_alignStart="@+id/guanzhu_name"/>
    </RelativeLayout>
</LinearLayout>
